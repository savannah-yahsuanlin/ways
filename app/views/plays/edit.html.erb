<h1>Edit Play</h1>
<%= simple_form_for @play, html: {multipart: true} do |f| %>
  <%= f.file_field :image, class: 'form-control'%>
  <%= f.select :category_id, @categories %>
  <%= f.input :title %>
  <%= f.input :description %>
	<%= f.input :director %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Cancel', root_path %>